# Enhanced Trading System Environment Configuration
# Copy this file to .env and fill in your actual values

# Bitget API Credentials (Required)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here  
BITGET_PASSPHRASE=your_bitget_passphrase_here

# OpenAI API (Optional - for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# API Security (Auto-generated if not provided)
API_TOKEN=your_secure_api_token_here

# Database Configuration (Optional - uses SQLite by default)
DATABASE_URL=sqlite:///enhanced_trading_system.db

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FILE=enhanced_trading_system.log

# Performance Settings (Optional)
INDICATOR_CACHE_SIZE=1000
CACHE_TTL=300
WS_RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10

# Risk Management Overrides (Optional)
MAX_PORTFOLIO_RISK=0.02
MAX_DAILY_LOSS=0.05  
MAX_DRAWDOWN=0.15
MAX_LEVERAGE=20